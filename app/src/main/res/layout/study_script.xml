<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@drawable/rectangle_under_mint">
            <Button
                android:id="@+id/my_bar"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:background="#FFB0E0E6"
                android:text="="/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="youngAI"
                android:textSize="30dp"
                android:gravity="center_horizontal" />
            <Button
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="#FFB0E0E6"
                android:layout_weight="0"
                android:text="o"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_under_mint"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/date"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="date" />

            <TextView
                android:layout_width="256dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="subject"
                android:textSize="30dp" />

            <Button
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:background="#FFB0E0E6"
                android:text="단어숙어" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="700dp"
                android:layout_weight="1"
                android:background="@drawable/rectangle_under_mint"
                android:orientation="vertical">

                <TextView
                    android:layout_width="192dp"
                    android:layout_height="33dp"
                    android:gravity="center_horizontal"
                    android:text="Script #1-level1"
                    android:textColor="#FFFFB6C1"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/script1"
                    android:layout_width="fill_parent"
                    android:layout_height="285dp"
                    android:autoSizeTextType="uniform"
                    android:background="#3C33F3E1"
                    android:gravity="center"
                    android:text="script~"
                    android:textColor="#FF000000"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/rectangle_under_mint"
                android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="116dp"
                    android:gravity="center_horizontal"
                    android:text="sentence1"
                    android:textColor="#FFFFB6C1"
                    android:textSize="25dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="score" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="97dp"
                    android:gravity="center_horizontal"
                    android:text="sentence2"
                    android:textColor="#FFFFB6C1"
                    android:textSize="25dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="score" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:layout_weight="1"
                android:background="@drawable/rectangle_under_mint"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button2"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="전체 듣기" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="따라하기" />

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>



</androidx.drawerlayout.widget.DrawerLayout>

